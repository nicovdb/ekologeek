        <div class="row d-flex text-align-center justify-content-center pb-5">
          <div class="col-12 col-sm-4 col-lg-2 text-center mb-4 pr-2 d-flex align-items-center justify-content-center">
            <%= link_to "https://bordeauxgironde.cci.fr/", target: :blank do %>
              <%= image_tag "CCI.png", height: 100 %>
            <% end %>
          </div>
          <div class="col-12 col-sm-4 col-lg-2 text-center mb-4 pr-2 d-flex align-items-center justify-content-center">
            <%= link_to "https://www.cebx.fr/", target: :blank do %>
              <%= image_tag "club-entreprises.svg", height: 100 %>
            <% end %>
          </div>
          <div class="col-12 col-sm-4 col-lg-2 text-center mb-4 pr-2 d-flex align-items-center justify-content-center">
            <%= link_to "https://www.cebx.fr/", target: :blank do %>
              <%= image_tag "GMAI.png", height: 100 %>
            <% end %>
          </div>
          <div class="col-12 col-sm-4 col-lg-4 text-center mb-4 d-flex align-items-center justify-content-center">
            <%= link_to "https://www.cebx.fr/", target: :blank do %>
              <%= image_tag "ecoindustries.png", width: 100 %>
            <% end %>
          </div>
        </div>
        <div class="call-action">
          <%= link_to "Vous aussi, soutenez le projet !", '/soutenir', class:"btn btn-primary smaller-font" %>
        </div>
      </div>
    </div>
  </div>
  <%= render 'shared/footer' %>
</div>
