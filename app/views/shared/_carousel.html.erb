<div id="carouselExampleSlidesOnly" class="carousel slide position-fixed" data-ride="carousel" data-interval="5000">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <%= image_tag "inscription.jpg", class:"d-block w-100", alt:"Second slide" %>
      <div class="carousel-caption">
        <div class="d-md-block">
          <%= link_to "/inscription", class:"btn btn-secondary text-white responsive-btn box" do %>
          <h5><b>Inscrivez-vous</b></h5>
          <p class="mb-0">jusqu'au 31 décembre 2018</p>
          <% end %>
        </div>
      </div>
    </div>
    <div class="carousel-item">
      <%= image_tag "gestion.jpg", class:"d-block w-100", alt:"First slide" %>
      <div class="carousel-caption">
        <%= link_to "/pourquoi", class:"btn btn-secondary text-white responsive-btn box" do %>
        <h5><b>140 kg de déchets par bureau</b></h5>
        <p class="mb-0">Relevez le Défi Zéro Déchet Des Pros</p>
        <% end %>
      </div>
    </div>
    <div class="carousel-item">
      <%= image_tag "mobilisation.jpg", class:"d-block w-100", alt:"Third slide" %>
      <div class="carousel-caption d-md-block">
        <%= link_to "/comment", class:"btn btn-secondary text-white responsive-btn box" do %>
        <h5><b>Relevez le Défi !</b> </h5>
        <p class="mb-0">Réduisez vos déchets de 10%</p>
        <% end %>
      </div>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleSlidesOnly" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleSlidesOnly" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
