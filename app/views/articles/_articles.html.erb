<div class="row row-eq-height">
  <% articles.each do |article| %>
    <div class="col-12 col-sm-6 col-lg-4  article">
      <%= link_to article_path(article) do %>
        <div class="card card-index mb-3 h-100">
          <% if article.cover.present? %>
            <%= cl_image_tag article.cover, height: 300, width: 400, crop: :fill, class: "card-img-top" %>
          <% else %>
            <%= image_tag "default.jpg", height: 300, width: 400, class: "card-img-top" %>
          <% end %>
          <div class="card-body">
            <div class="text-center mb-2">
              <% if article.publish_date.present? %>
                <em class="text-muted article-date-texte"><%=l(article.publish_date, format: :long )%></em>
              <% else %>
                <em class="text-muted article-date-texte"><%=l(article.created_at, format: :long )%></em>
              <% end %>
            </div>
            <h5 class="card-title mb-1"><b><%= article.title.upcase.truncate_words(5, omission: '...') %></b></h5>
            <p class="card-text"><%= article.subtitle.truncate_words(15, omission: '...') %></p>
            <div class="counts counts-index d-flex justify-content-between align-items-center my-3">
              <p class="mx-3 text-muted blue mr-2"><b><%= article.comments.count%><i class="fas fa-comment-alt ml-2"></i></b></p>
              <p class="text-muted"><%= article.likes.count%><i class="fas fa-heart red ml-2"></i> </p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
