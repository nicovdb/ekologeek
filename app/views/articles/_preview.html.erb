<div>
  <% articles.each do |article| %>
    <div class="article">
      <%= link_to article_path(article) do %>
        <div class="card mb-3 h-100">
          <div class="card-body pt-2 py-2">
            <h4 class="card-title mb-1"><%= article.title %></h4>
            <em class="card-text text-muted mb-2"><%= article.subtitle.truncate_words(15, omission: '...') %></em>
            <div class="counts d-flex justify-content-between align-items-center">
              <%= link_to "voir plus", article_path(article), class:"btn btn-link" %>
              <div class="d-flex align-items-center">
                <p class="mx-3 text-muted"><%= pluralize(article.comments.count, "commentaire", "commentaires") %></p>
                <%= article.likes.count%><i class="fas fa-heart red ml-2"></i>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
