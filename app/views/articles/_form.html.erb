<div class="container mt-5">
  <%= simple_form_for article do |f| %>
    <%= f.input :author %>
    <%= f.input :title %>
    <%= f.input :subtitle %>
    <%= f.input :visibility, collection: ["Interne", "Externe", "Les 2"] %>
    <%= f.input :tag_list %>
    <%= f.input :content, as: :trix_editor %>
    <%= f.submit %>
  <% end %>
</div>

