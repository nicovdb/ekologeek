function refreshForm(innerHTML) {
  const newAnswerForm = document.getElementById('new_answer');
  newAnswerForm.innerHTML = innerHTML;
}

function addAnswer(answerHTML) {
  const answers = document.getElementById('answers');
  answers.insertAdjacentHTML('beforeend', answerHTML);
}

<% if @answer.errors.any? %>
  refreshForm('<%= j render "answers/form", topic: @topic, answer: @answer %>');
<% else %>
  addAnswer('<%= j render "answers/show", answer: @answer %>');
  refreshForm('<%= j render "answers/form", topic: @topic, answer: Answer.new %>');
<% end %>
