<div class="wrapper ">
  <div class="bg-white container viewport space-top d-flex flex-column align-items-center justify-content-center">
    <%= simple_form_for(@company, url: company_path(@company)) do |f| %>
      <h3 class="mr-2">Structure</h3>
      <div class="row">
        <div class="col-12 col-md-6 pr-3">
          <%= f.input :name, placeholder: 'Nom de la structure*', label: false %>
        </div>
        <div class="col-12 col-md-6 pl-3">
          <%= f.input :town, prompt: 'Ville de Bordeaux Métropole*', collection: ["Ambarès-et-Lagrave", "Ambès", "Artigues-près-Bordeaux", "Bassens",
          "Bègles", "Blanquefort", "Bordeaux", "Bouliac", "Bruges", "Carbon-Blanc",
          "Cenon", "Eysines", "Floirac", "Gradignan", "Le Bouscat", "Le Haillan",
          "Le Taillan-Médoc", "Lormont", "Martignas-sur-Jalle", "Mérignac",
          "Parempuyre", "Pessac", "Saint-Aubin-de-Médoc", "Saint-Louis-de-Montferrand",
          "Saint-Médard-en-Jalles", "Saint-Vincent-de-Paul", "Talence"], as: :select, label: false  %>
        </div>
      </div>
      <div class="d-flex justify-content-center pb-5">
        <%= f.button :submit, "Modifier", class: 'btn btn-primary text-white bold mr-3 mb-3' %>
        <%= link_to "Retour", user_path(current_user), class:"btn btn-outline-primary ml-3 mb-3" %>
      </div>
    <% end %>
  </div>
</div>
