<h4 class="text-center bold"><%= company.name.upcase %></h4>
<div id='companychart' data-series="<%= series.to_json %>"></div>

<% if @total_weight_per_company != 0 %>
  <div class="d-flex align-items-center my-4 percentage">
    <div class="percente percente-blue">
      <%= (@residual_trash / @total_weight_per_company * 100).round %>%
    </div>
    <p>d'ordures ménagères résiduelles sur la production totale de déchets de fonctionnement</p>
  </div>
<% end %>


<div class="d-flex align-items-center my-4 percentage">
  <div class="percente percente-red">
    <%= @weight_evolution %>%
  </div>
  <p>d'évolution depuis le diagnostic</p>
</div>

<h2 class="green-bg my-4">Total par type de déchets</h2>

<div class="pane pane--table1 mt-4">
  <div class="pane-hScroll2">
    <table class="table table-striped table-hover chart_array">
      <thead>
        <tr class="text-center">
          <th> Type de déchet</th>
          <th> Kg / collaborateur / jour</th>
          <th> Jours suivis </th>
          <th> Poids total </th>
        </tr>
      </thead>
    </table>
    <div class="pane-vScroll2">
      <table class="table table-striped table-hover chart_array">
        <tbody>
          <% @days_and_weight_per_type_per_person.each do |type| %>
            <tr>
              <td><%= type[0] %></td>
              <td><%= (type[2] / type[1]).round(2) %></td>
              <td><%= type[1].to_i  %></td>
              <td><%= type[2].round %> Kg</td>
            </tr>
          <% end %>
          <tr>
            <td>Total</td>
            <td>-</td>
            <td>-</td>
            <td><%= @total_weight_per_company.round %> Kg</td>
          </tr>
        </tbody>
      </table>
    </div>

  </div>
</div>
