  <div class="bg-white container-padding my-5">
      <h3>Référent·e</h3>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <div class="row">
          <div class="col-12 col-md-3">
            <%= f.input :civility, prompt: 'Civilité*', collection: ["Mme", "M."], as: :select, label: false  %>
          </div>
          <div class="col-12 col-md-3">
            <%= f.input :first_name, placeholder: 'Prénom*', label: false  %>
          </div>
          <div class="col-12 col-md-3">
            <%= f.input :last_name, placeholder: 'NOM*', label: false  %>
          </div>
          <div class="col-12 col-md-3">
            <%= f.input :role, placeholder: 'Fonction*', label: false  %>
          </div>
        </div>
        <div class="row">
          <div class="col-12 col-md-3">
            <%= f.input :telephone, placeholder: 'Téléphone*', label: false  %>
          </div>
          <div class="col-12 col-md-6">
            <%= f.input :email, placeholder: 'Email*', label: false  %>
          </div>
          <div class="col-12 ml-3">
            <%= f.input :newsletter_dzd, label: "Oui, je veux recevoir la newsletter du Défi Zéro Déchet des Pros" %>
          </div>
          <div class="col-12 ml-3 mb-4">
            <%= f.input :newsletter_ekg, label: "Oui, je veux recevoir la newsletter mensuelle de l’#{link_to 'association Ekolo[geek]', partenaires_path, target: :blank} (ex. contenu : actualités, recette de saison, Acte ekolo[geek]...)".html_safe %>
          </div>
          <div class="row">
            <div class="form-inputs">
              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
              <% end %>
              <div class="col-12 ml-3 mb-4">
                <h3>Mot de passe</h3>
                <%= f.input :password,
                            hint: "leave it blank if you don't want to change it",
                            required: false,
                            input_html: { autocomplete: "new-password" } %>
              </div>
              <div class="col-12 ml-3 mb-4">
                <%= f.input :password_confirmation,
                            required: false,
                            input_html: { autocomplete: "new-password" } %>
              </div>
              <div class="col-12 ml-3 mb-4">
                <%= f.input :current_password,
                            hint: "we need your current password to confirm your changes",
                            required: false,
                            input_html: { autocomplete: "current-password" } %>
              </div>
            </div>
          </div>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Update", class:"btn btn-primary" %>
          <%= link_to "Back", user_path(@user), class:"btn btn-light" %>
        </div>
      <% end %>
  </div>
